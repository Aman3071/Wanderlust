<% layout("/layouts/boilerplate") %>

<!-- Bootstrap CSS and JS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.2rem; /* Add spacing between filters */
    margin-top: 10px;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    transition: opacity 0.3s ease-in-out;
    max-width: 120px;
    background: none; /* Remove background color */
    padding: 0; /* Remove padding */
    border: none; /* Remove borders */
  }

  .filter:hover {
    opacity: 1;
  }

  .filter i {
    font-size: 1.5rem;
    margin-bottom: 0.5rem; /* Space between icon and text */
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0; /* Remove default margin */
  }

  .tax-info {
    display: none;
  }

  /* Tax toggle styling */
  .tax-toggle {
    margin-left: 0.3rem; 
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
  }

  .navbar-nav {
   gap: 1rem; /* Add gap between filters in the navbar */
   }

  
</style>

<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg bg-white"> <!-- Changed background to white -->
  <div class="container-fluid">
    <!-- Navbar Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarFilters"
      aria-controls="navbarFilters"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Navbar -->
    <div class="collapse navbar-collapse" id="navbarFilters">
      <!-- Filters Section -->
      <div id="filters" class="navbar-nav me-auto">
        <div class="filter nav-item">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountain Cities</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-key"></i></div>
          <p>New</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boats</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach-Side</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-warehouse"></i></div>
          <p>Tree-House</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-water"></i></div>
          <p>Lake-View</p>
        </div>

        <div class="filter nav-item">
          <div><i class="fa-solid fa-tower-observation"></i></div>
          <p>Towers</p>
        </div>
      </div>

      <!-- Tax Toggle -->
      <div class="tax-toggle d-flex align-items-center">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault"
          />
          <label class="form-check-label" for="flexSwitchCheckDefault"
            >Display total after taxes</label
          >
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="<%= listing.title %>"
        style="height: 20rem"
      />

      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          &#8377;
          <%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %> / night
          <i class="tax-info"> &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>


<script>
  // For console testing
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if(info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
  }
  });
</script>
